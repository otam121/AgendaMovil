<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPCIONES AVANZADAS"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCELAR ABONO"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancela el último abono registrado dentro de la aplicación y restaura los valores almacenados en su memoria.\nSi quiere utilizar esta función tenga en cuenta lo siguiente: \n1.-Solo se puede realizar si el cliente seleccionado tiene un abono guardado en memoria\n2.-Todo cliente solo puede guardar un abono en memoria\n3.-Si esta operación es ejecutada el cliente seleccionado perdera su memoria de abonos.\n"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <Button
            android:id="@+id/btncancelarabono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#ff5722"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:drawableRight="@drawable/ic_restaurar"
            android:layout_marginBottom="25dp"
            android:text="Canelar ultimo abono" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCELAR CARGO"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Su objetivo es cancelar el ultimo cargo registrado dentro de la aplicacion y restaura los valores almacenados en su memoria\nSi quiere utilizar esta funcion tenga en cuenta lo siguiente:\n1.-Solo se puede realizar si el cliente tiene un cargo guardado en memoria, la momoria de cargos y abonos son independientes una de la otra.\n2.-Todo cliente solo puede guardar un cargo en memoria.\n3.-Si se esjecuta esta operación el cliente seleccionado perderá su memoria de cargos.\n"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />
        <Button
            android:id="@+id/btncancelarcargo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:background="#ff5722"
            android:drawableRight="@drawable/ic_restaurar"
            android:text="Cancelar ultimo cargo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEVOLUCiÓN"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Una devolucion parciar, se utiliza para quitar una parte del ultimo abono! es parcial porque no es capaz de retirar todo el monto en dado caso que desee hacer esa operacion debe utilizar la funcion CANCELAR CARGO"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <EditText
            android:id="@+id/edtdevolucion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monto de la devolucion"/>
        <Button
            android:id="@+id/btndevolucin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:drawableRight="@drawable/ic_money"
            android:background="#ff9800"
            android:textColor="@color/common_google_signin_btn_text_dark"
            android:layout_gravity="right"
            android:text="DEVOLUCION PARCIAL"/>


    </LinearLayout>

</ScrollView>

